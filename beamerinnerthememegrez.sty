\setbeamertemplate{title}{
  {\hfill\bfseries \huge\strut\inserttitle\strut\hfill}
  \vskip 3mm
}
\setbeamertemplate{subtitle}{
  {\hfill\bfseries \large\strut\insertsubtitle\strut\hspace*{2ex}}
  \vskip 0.5mm
}
\setbeamertemplate{author}{
  \vskip 5mm
  {\hfill\bfseries \Large\strut\insertauthor\strut\hfill}
  \vskip 0.5em
}
\setbeamertemplate{date}{
  {\hfill\strut\insertdate\strut\hfill}
  \vskip 2mm
}
\setbeamertemplate{institute}{
  \vskip 2mm
  {\hfill\normalsize\strut\insertinstitute\strut\hfill}
  \vskip 2mm
}
\setbeamertemplate{title page}{
  \linespread{1.2}%
  \vskip 15mm
  \ifx\insertsubtitle\@empty
    \vskip 9mm
    \usebeamertemplate*{title}
  \else
    \vskip-1mm
    \usebeamertemplate*{title}
    \usebeamertemplate*{subtitle}
  \fi
  \sepline
  \vskip 2mm\vskip 0pt
  \ifx\insertauthor\@empty\else\usebeamertemplate*{author}\fi
  \ifx\insertdate\@empty\else\usebeamertemplate*{date}\fi
  \ifx\insertinstitute\@empty\else\usebeamertemplate*{institute}\fi
  \vfill
}

\def\titlepage{\usebeamertemplate{title page}}

\AtBeginSection[]{
  \begin{frame}[c]
    \begin{center}
      {\bfseries \LARGE\insertsection}
    \end{center}
  \end{frame}
}

\setbeamertemplate{itemize item}{\raisebox{0.2ex}{$\circledcirc$}}
\setbeamertemplate{itemize subitem}{\raisebox{0.2ex}{$\odot$}}
\setbeamertemplate{itemize subsubitem}{\raisebox{0.2ex}{$\circ$}}
\setbeamerfont{itemize/enumerate body}{size=\large}
\setbeamerfont{itemize/enumerate subbody}{size=\normalsize}
\setbeamerfont{itemize/enumerate subsubbody}{size=\footnotesize}

\def\megrez@itembody{%
  \ifnum\@itemdepth=1\relax
    \vspace{-2mm}
    \setlength\itemsep{1.5ex}
    \addtolength\itemindent{-0.8em}
  \else
    \ifnum\@itemdepth=2\relax
      \vspace{0.8ex}
      \setlength\itemsep{1ex}
      \addtolength\itemindent{-1.45em}
    \else
      \ifnum\@itemdepth=3\relax
        \vspace{0.5ex}
        \setlength\itemsep{0.8ex}
        \addtolength\itemindent{-2.7em}
      \fi
    \fi
  \fi
}

\def\megrez@enditembody{%
  \ifnum\@itemdepth=1\relax
    \vspace{0.2ex}
  \else
    \ifnum\@itemdepth=2\relax
      \vspace{-0.3ex}
    \else
      \ifnum\@itemdepth=3\relax
        \vspace{-0.2ex}
      \fi
    \fi
  \fi
}

\xpatchcmd{\itemize}
{\def\makelabel}
{\megrez@itembody\def\makelabel}{}{}

\xpatchcmd{\enumerate}
{\def\makelabel}
{\megrez@itembody\def\makelabel}{}{}

\xpatchcmd{\enditemize}
{\endlist}
{\endlist\megrez@enditembody}{}{}

\xpatchcmd{\endenumerate}
{\endlist}
{\endlist\megrez@enditembody}{}{}

